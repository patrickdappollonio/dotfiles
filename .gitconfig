[user]
	name = "Patrick D'appollonio"
	email = dappollonio@hpe.com

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

; Requires enabling GPG signing for Git
; commits. So they show as verified online.
[commit]
	gpgsign = true

; Simple aliases to simplify commands
[alias]
   aa = add -A
   co = checkout
	cb = checkout -b
	st = status -s
	cl = clone
	cm = commit -S -s -m
	cma = commit -a -S -s -m
	ca = commit --amend -S -s
	amend = commit --amend -s
	commit = commit -S -s
	diff = diff --word-diff
	br = branch
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	le = log --oneline --decorate
	dl = "!git ll -1"
	aliases = "!git config -l | grep alias | cut -c 7-"
   pom = push origin master


; HPE SPECIFIC - allows to use ssh only
[url "ssh://git@github.hpe.com/"]
	insteadOf = https://github.hpe.com/
