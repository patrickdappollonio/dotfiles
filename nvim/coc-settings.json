{
	"languageserver": {
		"terraform": {
			"command": "terraform-ls",
			"args": ["serve"],
			"filetypes": ["terraform", "tf"],
			"initializationOptions": {}
		}
	},
	"yaml.schemas": {
		"kubernetes": "/*.yaml"
	},
	"diagnostic-languageserver.filetypes": {
		"sh": "shellcheck",
		"bash": "shellcheck"
	},
	"markdownlint.config": {
		"line_length": false
	}
}
