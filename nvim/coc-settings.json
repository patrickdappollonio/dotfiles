{
	"languageserver": {
		"terraform": {
			"command": "terraform-ls",
			"args": ["serve"],
			"filetypes": ["terraform", "tf"],
			"initializationOptions": {}
		},
		"golang": {
     		"command": "gopls",
	    	"rootPatterns": ["go.mod"],
			"filetypes": ["go"]
		}
	},
	"yaml.schemas": {
		"kubernetes": "/*.yaml"
	},
	"diagnostic-languageserver.filetypes": {
		"sh": "shellcheck",
		"bash": "shellcheck"
	},
	"markdownlint.config": {
		"line_length": false
	}
}
